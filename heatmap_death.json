{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Annual Deaths per State (2012-2022)",
    "width": 340,
    "height": 340,
    "data": {
      "url": "https://raw.githubusercontent.com/ChaiJuanYang/Data-Vis-2/refs/heads/main/both_overall.csv",  
      "format": {"type": "csv"}
    },
    "transform": [
      {
        "calculate": "year(datum.date)", 
        "as": "year"
      },
      {
        "filter": "datum.year >= 2012 && datum.year <= 2022"  
      }
    ],
    "mark": {
      "type": "rect",
      "stroke": "black",         
      "strokeWidth": 0.09         
    },
    "encoding": {
      "x": {
        "field": "year",
        "type": "ordinal",
        "title": "Year"
      },
      "y": {
        "field": "state",
        "type": "nominal",
        "title": "State"
      },
      "color": {
        "field": "annual_death",
        "type": "quantitative",
        "title": "Number of Deaths",
        "scale": {
          "domain": [0, 10000, 20000, 30000, 40000, 50000], 
          "range": ["#fee5d9", "#fcae91", "#fb6a4a", "#de2d26", "#a50f15", "#670010"]  
        },
        "legend": {
          "title": "Number of Deaths",
          "labelFontSize": 12,
          "titleFontSize": 14,
          "orient": "right"  
        }
      },
      "tooltip": [
        {"field": "state", "type": "nominal", "title": "State"},
        {"field": "year", "type": "ordinal", "title": "Year"},
        {"field": "annual_death", "type": "quantitative", "title": "Deaths"}
      ]
    }
  }
  